<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="next_button">
        <item name="android:background">@drawable/next_button_style</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">@font/font_architects_daughter</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="summary_button">
        <item name="android:background">@drawable/next_button_enabled_style</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">@font/font_architects_daughter</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edit_text">
        <item name="android:background">@drawable/data_edit_text_style</item>
        <item name="android:fontFamily">@font/font_architects_daughter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColorHint">@color/hint_grey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="interest_chip_style" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipBackgroundColor">@drawable/chip_style</item>
        <item name="rippleColor">@color/light_blue</item>

        <item name="chipCornerRadius">6dp</item>
        <item name="textEndPadding">8dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="textStartPadding">8dp</item>


        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/chipText</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_architects_daughter</item>
    </style>

    <style name="summary_text_appearance" >
        <item name="android:fontFamily">@font/font_architects_daughter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/hint_grey</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="summary_placeholder_text_appearance" >
        <item name="android:fontFamily">@font/font_architects_daughter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>