<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/nameFragment">

    <fragment
        android:id="@+id/nameFragment"
        android:name="ru.otus.basicarchitecture.ui.name.NameFragment"
        android:label="NameFragment"
        tools:layout="@layout/fragment_name">
        <action
            android:id="@+id/actionNameFragmentToLocationFragment"
            app:destination="@id/locationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/locationFragment"
        android:name="ru.otus.basicarchitecture.ui.location.LocationFragment"
        android:label="LocationFragment"
        tools:layout="@layout/fragment_location">
        <action
            android:id="@+id/actionLocationFragmentToInterestsFragment"
            app:destination="@id/interestsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/nameFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/interestsFragment"
        android:name="ru.otus.basicarchitecture.ui.interests.InterestsFragment"
        android:label="InterestsFragment"
        tools:layout="@layout/fragment_interests">
        <action
            android:id="@+id/actionInterestsFragmentToResultFragment"
            app:destination="@id/questionnaireFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/locationFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/questionnaireFragment"
        android:name="ru.otus.basicarchitecture.ui.result.ResultFragment"
        android:label="ResultFragment"
        tools:layout="@layout/fragment_result" />
</navigation>